<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 위 코드는 mapper 설정 코드 -->

<!-- Mapper를 사용하는 Repository의 전체 경로를 적어줘야함 -->
<mapper namespace="com.example.springjwt.repository.UserRepository">

    <insert id="insertUser" parameterType="com.example.springjwt.entity.UserEntity">
        INSERT INTO users (username, password, role) VALUES (#{username}, #{password}, #{role})
    </insert>

    <select id="findByUsername" parameterType="String" resultType="com.example.springjwt.entity.UserEntity">
        SELECT id, username, password, role FROM users WHERE username = #{username}
    </select>

    <select id="existsByUsername" parameterType="String" resultType="boolean">
        SELECT CASE
                   WHEN COUNT(*) > 0
                       THEN true
                   ELSE false
                   END
        FROM UserEntity
        WHERE username = #{username}
    </select>

    <!-- 기타 쿼리 정의 -->
</mapper>